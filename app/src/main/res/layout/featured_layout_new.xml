<?xml version="1.0" encoding="utf-8"?>
<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:mode="twoLine"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/text01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_toStartOf="@+id/myImageViewText" />

    <TextView
        android:id="@+id/text02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text01"
        android:layout_alignStart="@+id/text01"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_toStartOf="@+id/myImageViewText" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text02"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/text01"
        android:layout_marginStart="341dp"
        app:srcCompat="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignBottom="@+id/imageView2" />

</TwoLineListItem>