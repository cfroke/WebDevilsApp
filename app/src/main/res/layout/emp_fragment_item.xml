<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:weightSum="1">

    <TextView
        android:id="@+id/concept_created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/concept_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/concept_upvote_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/concept_employee_reviewed_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/concept_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/concept_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textAlignment="textStart" />

    <Button
        android:text="Review Concept"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:id="@+id/review_concept_button"
        android:onClick="reviewConceptBtn"
        android:background="@color/colorPrimaryDark"
        android:layout_weight="0.20"
        android:elevation="0dp" />

</LinearLayout>
