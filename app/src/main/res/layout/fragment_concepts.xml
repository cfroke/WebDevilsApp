<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector" >

    <Button
        android:text="My Concepts"
        android:layout_width="wrap_content"
        android:id="@+id/my_concepts_header"
        android:textColorLink="?attr/colorPrimaryDark"
        style="@style/Widget.AppCompat.Button.Colored"
        android:minHeight="125dp"
        android:background="@drawable/blueprint_printing_north_port_fl_0"
        android:textSize="24sp"
        android:scaleType="fitXY"
        android:layout_height="131dp"
        android:visibility="visible"
        android:maxHeight="125dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/Submit_new_Concept"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:text="Submit New Concept"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Submit_new_Concept"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_concepts_header"
        android:divider="#848482"
        android:dividerHeight="12sp"
        android:listSelector="@drawable/gradient_bg"
        android:textSize="20sp" />

</RelativeLayout>