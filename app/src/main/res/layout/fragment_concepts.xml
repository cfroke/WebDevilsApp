<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector" >

    <Button
        android:text="My Concepts"
        android:layout_width="wrap_content"
        android:id="@+id/my_concepts_header"
        style="@style/Widget.AppCompat.Button.Colored"
        android:minHeight="125dp"
        android:background="@drawable/blueprint_printing_north_port_fl_0"
        android:textSize="24sp"
        android:scaleType="fitXY"
        android:layout_height="131dp"
        android:visibility="visible"
        android:maxHeight="125dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Submit_new_Concept"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/gradient_bg"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:text="Submit New Concept"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="1dp" />

    <ListView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/Submit_new_Concept"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_concepts_header"
        android:divider="#848482"
        android:dividerHeight="12sp"
        android:listSelector="@drawable/gradient_bg"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Submit_new_Concept"
        app:layout_constraintTop_toBottomOf="@+id/my_concepts_header"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>